{
  "name": "cuongnx/laravel-mongodb-permission",
  "description": "A flexible and multi-guard Role & Permission system for Laravel 11+, using MongoDB and inspired by Spatie.",
  "type": "library",
  "license": "MIT",
  "version": "1.0.0",
  "authors": [
    {
      "name": "Cuong Nguyen",
      "email": "xuancuong220691@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/framework": "^11.0",
    "mongodb/laravel-mongodb": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "CuongNX\\MongoPermission\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "CuongNX\\MongoPermission\\Providers\\MongoPermissionServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
